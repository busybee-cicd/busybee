{
  "env": {
    "singleServer": true,
    "parallelism": 2
  },
  "testSuites": [
    {
      "protocol": "http",
      "host": "localhost",
      "port": 8180,
      "root": "/v1",
      "env": {
        "startScript": "envStart.sh",
        "stopScript": "envStop.sh",
        "healthcheck": {
          "type": "REST",
          "request": {
            "endpoint": "/healthcheck",
            "query": {
              "myQueryParam": "myQueryValue"
            },
            "body": {
              "myBodyKey": "myBodyValue"
            }
          }
        }
      },
      "defaultRequestOpts": {
        "headers": {
          "my-header": "myHeaderValue"
        },
        "json": true
      },
      "envInstances": [
        {
          "id": "My Test Env",
          "testSets": [
            {
              "id": "My Test Set"
            }
          ]
        }
      ]
    }
  ],
  "mockServer": {
    "port": 3030,
    "root": "/my/mockserver/root/v1",
    "proxy": {
      "protocol": "http",
      "host": "localhost",
      "port": 3000
    },
    "decorateRequestOpts": {
      "headers": {
        "my-header": "myHeaderValue"
      },
      "query": {
        "myQueryParam": "myQueryValue"
      },
      "body": {
        "myBodyKey": "myBodyValue"
      }
    }
  }
}
